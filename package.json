{
  "name": "keypair-lib",
  "version": "1.0.4",
  "description": "Keypair library",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "build": "npm run clean && tsc && npm run copy-files",
    "clean": "rm -rf ./lib",
    "copy-files": "cp -r ./zencode/ ./lib/zencode && cp -r ./props/ ./lib/props"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pasfranc/keypair-lib.git"
  },
  "keywords": [
    "keypair",
    "zencode"
  ],
  "author": "Pasquale Pio Francavilla <pasfranc@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^8.2.0",
    "zenroom": "^2.2.0-e4ecf22"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  },
  "files": [
    "lib/**/*"
  ],
  "bugs": {
    "url": "https://github.com/pasfranc/keypair-lib/issues"
  },
  "homepage": "https://github.com/pasfranc/keypair-lib#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  }
}
